<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="stylesheet" href="resources/css/style.css">
</head>
<body>
    <div class="login-form login-p">
        <h2>Registro</h2>
        <form action="/register" method="POST">
            <input type="text" name="nombre" id="nombre" placeholder="Ingrese nombre">
            <input type="email" name="email" id="email" placeholder="Ingrese email">
            <input type="text" name="user" id="user" placeholder="Ingrese usuario">
            <input type="password" name="pass" id="pass" placeholder="Ingrese password">
            <input type="submit" class="btn-login" value="Registro">
        </form>
    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(typeof alert != 'undefined') { %>
        <script>
            Swal.fire({
            title: '<%= alertTitle %>',
            text: '<%= alertMsj %>',
            icon: '<%= alertIcon %>',
            showConfirmButton: <%= showConfirmButton %>,
            timer: <%= timer %>
            }).then(() => {
                window.location='/ <% ruta %>'
            })
        </script>

        <% } %>
    

</body>
</html>